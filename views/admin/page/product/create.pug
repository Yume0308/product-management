extends ../../layout/defaultLayout.pug
include ../../mixins/form-search.pug
include ../../mixins/filterStatus.pug
include ../../mixins/form-change-status.pug
include ../../mixins/pagination.pug
include ../../mixins/alert.pug

block main 
    h1.mb-4 Thêm mới sản phẩm 
    +alert-success(4000)
    +alert-error(4000)
    +alert-warning(4000)
    form(
        action="/admin/product/create"
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
    )
        .form-group 
            label(for="title") Tiêu đề:
            input.form-control(
                type="text" name="title" id="title"
            )
        .form-group 
            label(for="description") Mô tả:
            textarea.form-control(
                name="description" id="description" rows="5" cols="10"
            )
        .form-group
            label(for="price") Giá:
            input.form-control(
                type="number" name="price" id="price" min="0"
            )
        .form-group 
            label(for="discountPercentage") Phần trăm giảm giá:
            input.form-control(
                type="number" name="discountPercentage" id="discountPercentage" min="0"
            )
        .form-group
            label(for="stock") Số lượng:
            input.form-control(
                type="number" name="stock" id="stock" min="0"
            )
        .form-group 
            label(for="rating") Đánh giá:
            input.form-control(
                type="number" name="rating" id="rating" min="0" max-value="5"
            )
        .form-group 
            label(for="category") Thể loại:
            input.form-control(
                type="text" name="category" id="category" 
            )
        .form-group.mb-3.mt-3(upload-image="")
            label(for="thumbnail") Ảnh thumbnail:
            input.form-control-file(
                type="file" name="thumbnail" id="thumbnail" accept="image/*" upload-image-input=""
            ) 
            img.image-preview(
                src="" upload-image-preview=""
            )
        .form-group.mb-3(upload-image="") 
            label(for="images") Ảnh minh hoạ:
            input.form-control-file(
                type="file" name="images" id="images" multiple="" accept="image/*" upload-image-input=""
            )
            img.image-preview(
                src="" upload-image-preview=""
            )
        .form-group 
            label(for="position") Vị trí
            input.form-control(
                type="number" name="position" id="position" min="1"
            )
        .form-group.form-check.form-check-inline 
            input.form-check-input(
                type="radio" id="statusActive" name="status" value="active" checked
            )
            label.form-check-label(for="statusActive") Hoạt động
        .form-group.form-check.form-check-inline 
            input.form-check-input(
                type="radio" id="statusInactive" name="status" value="inactive"
            )
            label.form-check-label(for="statusInactive") Dừng hoạt động
        .form-group 
            button.btn.btn-primary.mt-3(
                type="submit"
            ) Tạo mới